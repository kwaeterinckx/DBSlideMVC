@model IEnumerable<DBSlide_MVC.Models.Student.StudentListItemModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Student" asp-route-id="@(item.StudentId)">Details</a>
                    @if (_Session.UserSession.Login == item.Login)
                    {
                        @:|
                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@(item.StudentId)">Edit</a> @:|
                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@(item.StudentId)">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
